#include <avr/io.h>
#include <util/delay.h>

#define F_CPU 16000000UL

int main(void)
{
	DDRB |= (1<<DDB1);
	DDRB |= (1<<DDB2);
	DDRB |= (1<<DDB3);
	DDRB |= (1<<DDB4);
	DDRD &= ~(1<<DDD7);

	int leds[] = {(1<<PB1), (1<<PB2), (1<<PB3);, (1<<PB4)}; // list of each code operation needed to turn LED ON
	int led_on = 0; //set which LED is on first
	PORTB = 0;

	while(1)
	{
		if (!(PIND & (1<<PIND7)))
		{
			_delay_ms(50);
			if (!(PIND & (1<<PIND7)))
			{
				PORTB = 0;
				PORTB |= leds[led_on];
				led_on = (led_on + 1) % 4; //change value of INT so they loop through as button pressde
				while (!(PIND & (1<<PIND7)));
			}
		}
	}
	return 0;
}
